<div class="login-container">
  <div class="login-logo-wrapper">
    <%= image_tag "logo.png", alt: "CRM.io Logo", class: "login-logo" %>
  </div>

  <h1 class="login-heading">Bienvenue!</h1>
  <h2 class="login-subheading">dans <span class="login-brand-name">Best United</span></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
    <div class="login-input-group">
      <%= f.label :email, class: 'login-label' %>
      <div class="login-input-wrapper">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'login-input-field' %>
      </div>
    </div>

    <div class="login-input-group">
      <%= f.label :password, class: 'login-label' %>
      <div class="login-input-wrapper">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'login-input-field' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="login-remember-me-group">
        <%= f.check_box :remember_me, class: 'login-remember-me-checkbox' %>
        <%= f.label :remember_me, class: 'login-remember-me-label' %>
      </div>
    <% end %>

    <div class="login-action-group">
      <%= f.submit "Se connecter", class: 'login-submit-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: 'login-forgot-password-link' %>
</div>
